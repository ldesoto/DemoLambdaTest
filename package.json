{
  "name": "lambdatest-playwright-demo",
  "version": "1.0.0",
  "description": "Automated tests for LambdaTest Selenium Playground using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:scenario1": "playwright test -g 'Scenario 1'",
    "test:scenario2": "playwright test -g 'Scenario 2'",
    "test:scenario3": "playwright test -g 'Scenario 3'",
    "report": "playwright show-report",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf test-results/ playwright-report/",
    "prepare": "npx playwright install chromium"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e",
    "lambdatest"
  ],
  "author": "Luis DeSoto",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
